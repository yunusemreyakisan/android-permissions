<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5DC"
    tools:context=".PermissionActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_Message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="İzin İşlemleri"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />



        <!-- Mesaj Gönderme İzni -->
        <Button
            android:id="@+id/btn_SendText"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_Message"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="Mesaj Gönder" />


        <!-- Arama Yapma İzni -->
        <Button
            android:id="@+id/btn_CallPhone"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_SendText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Arama Yap"
            />



        <!-- Web sayfasını göster. -->
        <Button
            android:id="@+id/btn_ShowWebpage"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_CallPhone"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Web Sayfasını Göster"
            />


        <!--  Numarayı Arama Ekranına Aktarma -->
        <Button
            android:id="@+id/btn_IntentNumberScreen"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_ShowWebpage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Numarayı Arama Ekranına Aktarma" />






    </RelativeLayout>
</LinearLayout>